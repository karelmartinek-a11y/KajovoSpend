+        non_ws += 1
+        if ch.isalnum():
+            alnum += 1
+        cat = unicodedata.category(ch)
+        if cat.startswith("P") or ch in string.punctuation:
+            punct += 1
+        if cat.startswith("C") and ch not in "\t\n\r":
+            ctrl += 1
+
+    ctrl += repl
+    whitespace = N - non_ws
